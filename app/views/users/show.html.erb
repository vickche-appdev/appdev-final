<div>
  <div>
    <h1>
      User #<%= @the_user.id %> details
    </h1>

    <div>
      <div>
        <a href="/users">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_user/<%= @the_user.id %>">
          Delete user
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Username
      </dt>
      <dd>
        <%= @the_user.username %>
      </dd>

      <dt>
        Rsvp count
      </dt>
      <dd>
        <%= @the_user.rsvp_count %>
      </dd>

      <dt>
        Post count
      </dt>
      <dd>
        <%= @the_user.post_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_user.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit user
    </h2>

    <form action="/modify_user/<%= @the_user.id %>"  method="post" >
      <div>
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username" value="<%= @the_user.username %>">
      </div>

      <div>
        <label for="rsvp_count_box">
          Rsvp count
        </label>

        <input type="text" id="rsvp_count_box" name="query_rsvp_count" value="<%= @the_user.rsvp_count %>">
      </div>

      <div>
        <label for="post_count_box">
          Post count
        </label>

        <input type="text" id="post_count_box" name="query_post_count" value="<%= @the_user.post_count %>">
      </div>

      <button>
        Update user
      </button>
    </form>
  </div>
</div>

<hr>
